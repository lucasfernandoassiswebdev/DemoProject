{
    "compilerOptions": {        
        "incremental": true,
        "target": "ES6",
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "typeRoots": [ 
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts"        
    ],
    "exclude": [
        "./node_modules"
    ],    
    "buildOnSave": true,
    "compileOnSave": true
}