{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES6",
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "outDir": "dist",
        "typeRoots": [ 
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts",
        "node_modules/bases/lib/*.ts",
        "node_modules/bases/bin/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ],    
    "buildOnSave": true,
    "compileOnSave": true
}